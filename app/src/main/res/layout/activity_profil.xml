<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="5dp"
    tools:context=".MyUserActivity">

    <TextView
        android:id="@+id/tvProfilSaya"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Profil Saya"
        android:textSize="25sp"
        android:textStyle="bold"
        android:textColor="@color/color1"
        android:layout_below="@id/btBack"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"/>

    <Button
        android:id="@+id/btBack"
        android:layout_width="wrap_content"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/color1"
        android:text="Beranda"
        android:textColor="@color/color2" />

    <View
        android:id="@+id/kolomAtas"
        android:layout_width="match_parent"
        android:layout_height="20dp"
        android:background="@color/color1"
        android:layout_below="@id/tvProfilSaya"
        android:layout_marginTop="5dp"></View>

    <ImageView
        android:id="@+id/ivPhoto"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="15dp"
        android:layout_marginTop="114dp" />

    <TextView
        android:id="@+id/tvUsername"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="121dp"
        android:text="username"
        android:textColor="@color/color1"
        android:textSize="15sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/tvNama"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvUsername"
        android:layout_marginTop="155dp"
        android:text="Nama" />

    <TextView
        android:id="@+id/tvAlamat"
        android:layout_width="185dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignStart="@+id/tvUsername"
        android:layout_marginTop="188dp"
        android:text="Alamat"
        android:textAlignment="center" />

    <View
        android:id="@+id/kolomBawah"
        android:layout_width="match_parent"
        android:layout_height="24dp"
        android:layout_alignParentStart="true"
        android:layout_centerVertical="true"
        android:background="@color/color1" />
    <Button
        android:id="@+id/btEdit"
        android:layout_width="wrap_content"
        android:layout_height="25dp"
        android:layout_below="@id/kolomBawah"
        android:layout_marginTop="10dp"
        android:background="@color/color1"
        android:layout_centerHorizontal="true"
        android:text="Edit"
        android:textColor="@color/color2"
        />
</RelativeLayout>